<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/stroke_color"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/background_color"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- User Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/imageUser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder"
                android:background="@drawable/circle_background"
                android:elevation="1dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:letterSpacing="0.01" />

                <TextView
                    android:id="@+id/post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textSize="12sp"
                    android:alpha="0.7"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Menu Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_placeholder"
                android:alpha="0.6"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Post Image with modern aspect ratio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/imagePost"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder" />

        </androidx.cardview.widget.CardView>

        <!-- Description -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="This is a sample post description."
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons with modern spacing -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <!-- Like Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp">

                <FrameLayout
                    android:layout_width="22dp"
                    android:layout_height="22dp">

                    <ImageView
                        android:id="@+id/button_like"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_like"
                        android:contentDescription="disLike"
                        android:visibility="gone"
                        app:tint="@color/text_color" />

                    <ImageView
                        android:id="@+id/button_dislike"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@drawable/ic_unlike"
                        app:tint="@color/text_color"
                        android:contentDescription="Like" />

                </FrameLayout>

                <TextView
                    android:id="@+id/textLikeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="6dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Comment Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/buttonComment"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_comment"
                    android:contentDescription="Comment"
                    app:tint="@color/text_color" />

                <TextView
                    android:id="@+id/textCommentCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="6dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Share Section -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp">

                <ImageView
                    android:id="@+id/buttonShare"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/ic_send"
                    android:contentDescription="Share"
                    app:tint="@color/text_color" />

                <TextView
                    android:id="@+id/textShareCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginStart="6dp"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>