<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/stroke_color"
    app:strokeWidth="0.5dp"
    app:cardBackgroundColor="@color/background_color"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <!-- User Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="14dp">

            <!-- Profile Image -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageUser"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder"
                app:strokeWidth="1dp"
                app:strokeColor="@color/stroke_color"
                android:background="@drawable/circle_background" />

            <!-- Username + Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:alpha="0.6" />

            </LinearLayout>

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_more_vert"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:contentDescription="Menu"
                app:tint="@color/text_color" />
        </LinearLayout>

        <!-- Post Image -->
        <ImageView
            android:id="@+id/imagePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:contentDescription="post_user" />

        <!-- Post Description -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="This is a sample post description."
            android:textColor="@color/text_color"
            android:autoLink="web"
            android:singleLine="true"
            android:linksClickable="true"
            android:textColorLink="@color/accent_blue"
            android:textSize="18sp"
            android:background="?attr/selectableItemBackground"
            android:layout_marginBottom="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Like Button - Enhanced Size -->
            <com.google.android.material.chip.Chip
                android:id="@+id/likeCheckBox"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="0"
                android:textSize="18sp"
                android:checkable="true"
                android:layout_marginEnd="12dp"
                app:chipIcon="@drawable/like_button_selector"
                app:chipIconTint="@color/text_color"
                app:chipIconSize="28dp"
                app:iconStartPadding="10dp"
                app:chipStartPadding="16dp"
                app:chipEndPadding="16dp"
                app:chipStrokeColor="@color/stroke_color"
                app:chipStrokeWidth="1dp" />

            <!-- Comment Button - Enhanced Size -->
            <com.google.android.material.chip.Chip
                android:id="@+id/click_to_comment"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="0"
                android:layout_marginEnd="12dp"
                android:textSize="18sp"
                app:chipIcon="@drawable/ic_comment"
                app:chipIconTint="@color/text_color"
                app:chipIconSize="28dp"
                app:chipStartPadding="16dp"
                app:chipEndPadding="16dp"
                app:chipStrokeColor="@color/stroke_color"
                app:chipStrokeWidth="1dp" />

            <!-- Share Button - Enhanced Size -->
            <com.google.android.material.chip.Chip
                android:id="@+id/buttonShare"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="Share"
                android:textSize="16sp"
                app:chipIcon="@drawable/ic_send"
                app:chipIconTint="@color/text_color"
                app:chipIconSize="28dp"
                app:chipStartPadding="16dp"
                app:chipEndPadding="16dp"
                app:chipStrokeColor="@color/stroke_color"
                app:chipStrokeWidth="1dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>