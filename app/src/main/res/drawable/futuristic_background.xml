<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base dark gradient -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#0A0A0F"
                android:centerColor="#1A0033"
                android:endColor="#000B1A"
                android:type="linear" />
        </shape>
    </item>

    <!-- Texture overlay using gradient -->
    <item android:alpha="0.08">
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#05FFFFFF"
                android:centerColor="#02000000"
                android:endColor="#03FFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <!-- Additional texture layer -->
    <item android:alpha="0.04">
        <shape>
            <gradient
                android:angle="225"
                android:startColor="#03000000"
                android:centerColor="#06FFFFFF"
                android:endColor="#02FFFFFF"
                android:type="linear" />
        </shape>
    </item>

</layer-list>