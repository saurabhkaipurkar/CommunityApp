<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base circle with gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="60dp"
                android:startColor="#3000BFFF"
                android:centerColor="#2000FFFF"
                android:endColor="#1000BFFF" />
        </shape>
    </item>

    <!-- Outer ring -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#6000FFFF" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Inner ring -->
    <item android:insetTop="10dp" android:insetLeft="10dp"
        android:insetRight="10dp" android:insetBottom="10dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#4000BFFF" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>